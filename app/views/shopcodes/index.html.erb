<h1>Listing shopcodes</h1>

<table>
  <thead>
    <tr>
      <th>Order no</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Shop code</th>
      <th>Store credit</th>
      <th>Issue date</th>
      <th>Exp date</th>
      <th>Comment</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopcodes.each do |shopcode| %>
      <tr>
        <td><%= shopcode.order_no %></td>
        <td><%= shopcode.first_name %></td>
        <td><%= shopcode.last_name %></td>
        <td><%= shopcode.email %></td>
        <td><%= shopcode.shop_code %></td>
        <td><%= shopcode.store_credit %></td>
        <td><%= shopcode.issue_date %></td>
        <td><%= shopcode.exp_date %></td>
        <td><%= shopcode.comment %></td>
        <td><%= shopcode.status %></td>
        <td><%= link_to 'Show', shopcode %></td>
        <td><%= link_to 'Edit', edit_shopcode_path(shopcode) %></td>
        <td><%= link_to 'Destroy', shopcode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shopcode', new_shopcode_path %>
